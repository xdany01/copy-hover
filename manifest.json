{
    "manifest_version": 3,
    "name": "Copy Hover",
    "version": "1.1",
    "description": "Resalta y copia texto al pasar el mouse + tecla modificadora ALT.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "icons": {
        "16": "images/icon512.png",
        "48": "images/icon512.png",
        "128": "images/icon512.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon512.png",
            "48": "images/icon512.png",
            "128": "images/icon512.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}